#!/bin/sh

lock_file=/tmp/audiobank-cron-lock

if [ -f $lock_file ]; then
  echo "INFO: cron already running"
  exit 0
fi

touch $lock_file

# To find bundle
export PATH=/usr/local/bin:$PATH

[ "$#" -gt 0 ] && options="-e $1"

base_dir=`dirname $0`/..
cd $base_dir

# $bin_dir/../script/runner $options 'Cue.update'
bundle exec ./script/runner $options 'Cast.update'
bundle exec ./script/runner $options 'Subscription.notify'

rm $lock_file
