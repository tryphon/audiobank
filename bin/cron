#!/bin/sh

lock_file=/tmp/audiobank-cron-lock

if [ -f $lock_file ]; then
  echo "INFO: cron already running"
  exit 0
fi

touch $lock_file

[ "$#" -gt 0 ] && options="-e $1"

base_dir=`dirname $0`/..
cd $base_dir

# To find bundle
export PATH=script:$PATH

# $bin_dir/../script/runner $options 'Cue.update'
script/bundle exec rails runner $options 'Cast.update'
script/bundle exec rails runner $options 'Subscription.notify'

rm $lock_file
