<h2>Vos documents</h2>
<ul>
 <%= render :partial => "documents/documents", :object => @author.documents[0..2], :locals => { :linked => true, :empty => "Vous n'avez aucun document ...", :actions => false, :tags => false } %>
</ul>
<div class="actions">
 <%= link_to("Vos autres documents &#8250;", :controller => "documents", :action => "manage") %>
</div>
<hr/>
<h2>Vos souscriptions</h2>
<ul>
 <%= render :partial => "subscriptions/subscriptions", :object => @subscriber.find_subscriptions(:offset => 0, :limit => 2), :locals => { :linked => true, :empty => "Vous n'avez aucune souscription ...", :actions => false, :tags => false } %>
</ul>
<div class="actions">
 <%= link_to("Vos autres subscriptions &#8250;", :controller => "subscriptions", :action => "manage") %>
</div>
<h2>Vos podcasts</h2>
<ul>
 <%= render :partial => "podcasts/podcasts", :object => @author.podcasts[0..2], :locals => { :linked => true, :empty => "Vous n'avez aucun podcast ...", :actions => false, :tags => false } %>
</ul>
<div class="actions">
 <%= link_to("Vos autres podcasts &#8250;", :controller => "podcasts", :action => "manage") %>
</div>
<hr/>
<h2>Vos étiquettes</h2>
<% if @tag.empty? %>
 <p>Vous n'avez aucune étiquette ..</p>
<% else %>
 <p id="cloud">
  <% for tag in @tag %>
   <%= link_to(tag.name, { :action => "tag", :name => tag.name }, :rel => "tag", :class => "rel-tag") %>
  <% end %>
 </p>
<% end %>
<div class="actions">
 <%= link_to("Vos autres étiquettes &#8250;", :controller => "users", :action => "tags") %>
</div>
